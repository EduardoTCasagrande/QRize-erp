<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Estoque por Quiosque</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen font-sans flex flex-col">

  <%- include('partials/header') %>

  <main class="flex-grow max-w-6xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">
      Estoque - Quiosque: <span id="nomeQuiosque" class="text-blue-600"></span>
    </h1>

    <!-- Seletor Quiosque sÃ³ para admin -->
    <div id="seletorAdmin" class="mb-4" style="<%= user.admin ? '' : 'display:none;' %>">
      <label for="quiosqueSelect" class="block mb-2 font-semibold text-gray-700">Selecionar Quiosque:</label>
      <select id="quiosqueSelect" class="w-full max-w-xs p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></select>
    </div>

    <input
      type="text"
      id="buscaSKU"
      placeholder="Buscar por SKU..."
      class="mb-6 w-full max-w-xs p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
    />

    <div class="overflow-x-auto">
      <table
        id="tabelaEstoque"
        class="min-w-full bg-white rounded-md shadow overflow-hidden"
        style="display:none;"
      >
        <thead class="bg-blue-600 text-white">
          <tr>
            <th class="text-left py-3 px-4">SKU</th>
            <% if (user.admin) { %>
              <th class="text-left py-3 px-4">Quantidade</th>
            <% } %>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200"></tbody>
      </table>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script>
    const isAdmin = <%= user.admin ? 'true' : 'false' %>;

    async function carregarQuiosques() {
      const res = await fetch('/api/quiosques');
      const data = await res.json();
      const select = document.getElementById('quiosqueSelect');
      select.innerHTML = '';

      data.quiosques.forEach(q => {
        const option = document.createElement('option');
        option.value = q;
        option.textContent = q;
        select.appendChild(option);
      });

      select.addEventListener('change', carregarEstoque);

      if (data.quiosques.length > 0) {
        select.value = data.quiosques[0];
        await carregarEstoque();
      }
    }

    async function carregarEstoque() {
      let url = '/api/estoque';
      if (isAdmin) {
        const quiosque = document.getElementById('quiosqueSelect').value;
        url += '?quiosque=' + encodeURIComponent(quiosque);
      }

      const res = await fetch(url);
      const data = await res.json();

      document.getElementById('nomeQuiosque').textContent = data.quiosque;

      const tbody = document.querySelector('#tabelaEstoque tbody');
      tbody.innerHTML = '';

      if (!data.skus || data.skus.length === 0) {
        tbody.innerHTML = `<tr><td class="py-3 px-4" colspan="${isAdmin ? 2 : 1}">Nenhum item no estoque.</td></tr>`;
      } else {
        data.skus.forEach(({ sku, quantidade }) => {
          const tr = document.createElement('tr');
          tr.classList.add('hover:bg-gray-50');

          if (isAdmin) {
            tr.innerHTML = `
              <td class="py-3 px-4 font-mono">${sku}</td>
              <td class="py-3 px-4">${quantidade}</td>
            `;
          } else {
            tr.innerHTML = `
              <td class="py-3 px-4 font-mono">${sku}</td>
            `;
          }
          tbody.appendChild(tr);
        });
      }

      document.getElementById('tabelaEstoque').style.display = 'table';
    }

    document.getElementById('buscaSKU').addEventListener('input', function () {
      const filtro = this.value.toLowerCase();
      document.querySelectorAll('#tabelaEstoque tbody tr').forEach(tr => {
        const sku = tr.querySelector('td').textContent.toLowerCase();
        tr.style.display = sku.includes(filtro) ? '' : 'none';
      });
    });

    window.addEventListener('load', async () => {
      if (isAdmin) {
        await carregarQuiosques();
      } else {
        await carregarEstoque();
      }
    });
  </script>

</body>
</html>
